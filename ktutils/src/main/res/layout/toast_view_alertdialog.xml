<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/ios_dialog_title_color"
            android:textSize="@dimen/ios_dialog_title_size"
            android:textStyle="bold"
            tools:text="Title"/>

    <TextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/ios_dialog_msg_color"
            android:textSize="@dimen/ios_dialog_msg_size"
            tools:text="Message"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#d9d9d9"/>

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider="@color/divide_line_color"
            app:showDividers="middle"
            android:orientation="horizontal">

        <Button
                tools:text="取消"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/leftBtn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ios_dialog_button_def_color"
                android:textSize="15sp"/>


        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/rightBtn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ios_dialog_button_def_color"
                android:textSize="15sp"/>
    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>