    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#dfdfdf" />
                </shape>
            </item>
            <item android:left="-2dp" android:right="-2dp" android:top="-10dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/divide_line_color" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#efefef" />
                </shape>
            </item>
            <item android:left="-2dp" android:right="-2dp" android:top="-10dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/divide_line_color" />
                </shape>
            </item>
